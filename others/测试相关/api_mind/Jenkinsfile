// Jenkinsfile
pipeline {
    agent any
    stages {
        stage('Setup') {
            steps {
                sh 'pip install -r requirements.txt'
            }
        }
        stage('Test') {
            steps {
                sh 'pytest --alluredir=reports/allure-results'
            }
        }
        stage('Report') {
            steps {
                allure([
                    includeProperties: false,
                    jdk: '',
                    properties: [],
                    reportBuildPolicy: 'ALWAYS',
                    results: [[path: 'reports/allure-results']]
                ])
            }
        }
        stage('Email Notification') {
            steps {
                script {
                    def logContent = readFile('reports/test.log')
                    emailext (
                        to: 'recipient@example.com',
                        subject: "Test Report",
                        body: "Test report attached.\n\nLog:\n${logContent}",
                        attachmentsPattern: 'reports/allure-results/**/*'
                    )
                }
            }
        }
    }
}
