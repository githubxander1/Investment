#:kivy 2.0.0

<MainScreen>:
    orientation: "vertical"
    spacing: 10
    padding: [10, 10, 10, 10]

    Label:
        text: "智能感知防近视防沉迷应用"
        font_size: 30

    BoxLayout:
        orientation: "horizontal"
        size_hint_y: None
        height: "40dp"
        spacing: 10

        Button:
            text: "开始监测"
            on_release: root.start_monitoring()

        Button:
            text: "暂停监测"
            on_release: root.pause_monitoring()
            disabled: True

        Button:
            text: "设置"
            on_release: root.open_settings()

    Image:
        id: camera_view
        size_hint_y: 0.8

    BoxLayout:
        orientation: "horizontal"
        size_hint_y: None
        height: "40dp"
        spacing: 10

        Label:
            text: "距离: "
            size_hint_x: 0.3

        Label:
            id: distance_label
            text: "未知"
            size_hint_x: 0.3

        Label:
            text: "使用时间: "
            size_hint_x: 0.3

        Label:
            id: time_label
            text: "00:00:00"
            size_hint_x: 0.3

    Button:
        text: "查看用眼报告"
        on_release: root.show_report()
